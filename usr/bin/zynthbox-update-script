#!/bin/bash
#
# Update Script for Zynthbox
# License: GPLv3

# Source envars to switch to venv
source /zynthian/config/zynthian_envars.sh

DEBIAN_FRONTEND=noninteractive
PACKAGES="zynthbox-meta zynthbox-qml libzynthbox zynthbox-bootsplash zyncoder zynthian-webconf plasma-framework-zynthbox zynthian-plasma-theme zynthian-sys zynthbox-plugin-raffo zynthbox-docs sunshine sonobus zynthbox-plugin-fabla zynthbox-plugin-gxplugins zynthbox-theme-v1"

###
# Exits with code 0 if updates are available and non-zero if no updates are available
###
check_for_updates () {
    echo "### Updating repositories"
    apt-get -yy update

    # Check if any of the packages has an update
    for pkg in $PACKAGES ; do
        if [[ $(apt list --upgradable 2>/dev/null  | grep $pkg) ]]; then
            exit 0
        fi
    done

    exit 1
}

###
# Running this function will upgrade the listed packages
###
do_upgrade () {
    echo "### Installing packages"

    pip install XStatic-term.js

    # Update all packages
    apt-get -yy install \
        -o DPkg::Options::="--force-confdef" \
        -o DPkg::Options::="--force-confold" \
        -o DPkg::Options::="--force-overwrite" \
        $PACKAGES
}

echo "####################################"
echo "###    ZYNTHBOX UPDATE SCRIPT    ###"
echo "####################################"

# Execute argument to run one of the above functions
"$@"
